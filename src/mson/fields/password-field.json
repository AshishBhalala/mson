{
  "component": "TextField",
  "type": "password",
  "minLength": 8,
  "maxLength": 30,
  "validators": [
    {
      "selector": {
        "value": {
          "$not": {
            "$regex": "\\d"
          }
        }
      },
      "error": "must contain a number"
    },
    {
      "selector": {
        "value": {
          "$not": {
            "$regex": "[a-zA-Z]"
          }
        }
      },
      "error": "must contain a letter"
    },
    {
      "selector": {
        "value": {
          "$regex": "[^a-zA-Z0-9\\!\\@\\#\\$\\%\\^\\&\\*\\(\\)\\_\\+]"
        }
      },
      "error": "contains an invalid character"
    }
  ]
}
