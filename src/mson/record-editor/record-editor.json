{
  "component": "Form",
  "baseForm": "{{baseForm}}",
  "form": {
    "component": "{{baseForm}}",
    "fields": [
      {
        "component": "ButtonField",
        "type": "submit",
        "name": "save",
        "label": "Save",
        "icon": "Save"
      },
      {
        "component": "ButtonField",
        "name": "cancel",
        "label": "Cancel",
        "icon": "Cancel"
      }
    ]
  },
  "listeners": [
    {
      "event": "load",
      "actions": [
        {
          "component": "Set",
          "name": "reset",
          "value": true
        },
        {
          "component": "Set",
          "name": "fields.id.value",
          "value": "{{id}}"
        },
        {
          "component": "APIGet",
          "url": "{{url}}",
          "object": "{{object}}",
          "id": "{{id}}",
          "fields": "{{inFields}}"
        },
        {
          "component": "Set",
          "name": "pristine",
          "value": true
        },
        {
          "component": "Set",
          "name": "fields.save.disabled",
          "value": true
        }
      ]
    },
    {
      "event": "canSubmit",
      "actions": [
        {
          "component": "Set",
          "name": "fields.save.disabled",
          "value": false
        }
      ]
    },
    {
      "event": "cannotSubmit",
      "actions": [
        {
          "component": "Set",
          "name": "fields.save.disabled",
          "value": true
        }
      ]
    },
    {
      "event": "save",
      "actions": [
        {
          "component": "APISet",
          "url": "{{url}}",
          "object": "{{object}}",
          "id": "{{id}}",
          "fields": "{{outFields}}"
        },
        {
          "//": "Needed or else will be prompted for save",
          "component": "Set",
          "name": "pristine",
          "value": true
        },
        {
          "component": "Redirect",
          "if": {
            "saveURL": null
          },
          "path": "/home"
        },
        {
          "component": "Redirect",
          "if": {
            "saveURL": {
              "$ne": null
            }
          },
          "path": "{{saveURL}}"
        },
        {
          "component": "Snackbar",
          "message": "{{label}} saved"
        }
      ]
    },
    {
      "event": "cancel",
      "actions": [
        {
          "component": "Redirect",
          "if": {
            "cancelURL": null
          },
          "path": "/home"
        },
        {
          "component": "Redirect",
          "if": {
            "cancelURL": {
              "$ne": null
            }
          },
          "path": "{{cancelURL}}"
        }
      ]
    }
  ]
}
